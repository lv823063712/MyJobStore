        <activity android:name=".ui.activity.FluidLayoutActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.WalletActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.MyPersonalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.AddressActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.InsertAddressActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activity.CommentActivity"
            android:label="@string/title_activity_comment"
            android:theme="@style/AppTheme"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.MyFootprintActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.PlusImageActivity"
            android:configChanges="keyboardHidden|orientation"
