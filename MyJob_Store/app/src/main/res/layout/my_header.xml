<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/My_Btn_Back"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/common_nav_btn_back_n_hdpi" />

    <com.xw.repo.XEditText
        android:id="@+id/my_Search"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/my_search_edittext"
        android:drawableLeft="@drawable/a"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入您要搜索的商品"
        android:textColorHint="#b1adad" />

    <TextView
        android:id="@+id/My_Search_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:text="搜索"
        android:textSize="@dimen/sp_14" />
</LinearLayout>