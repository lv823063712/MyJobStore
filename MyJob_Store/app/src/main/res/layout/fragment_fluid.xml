<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragmentsun.FluidFragment">

    <soexample.bigfly.com.myjob_store.utils.user_defined_view.user_defined_View
        android:id="@+id/My_Header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_24"></soexample.bigfly.com.myjob_store.utils.user_defined_view.user_defined_View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="搜索历史" />

        <TextView
            android:id="@+id/My_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/common_btn_delete_n_hdpi" />
    </RelativeLayout>

    <soexample.bigfly.com.myjob_store.utils.user_defined_view.User_Defined
        android:id="@+id/My_History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColor="@color/colorPrimaryDark"></soexample.bigfly.com.myjob_store.utils.user_defined_view.User_Defined>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="热门搜索" />

    <soexample.bigfly.com.myjob_store.utils.user_defined_view.User_Defined
        android:id="@+id/My_Hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColor="@color/colorPrimaryDark"></soexample.bigfly.com.myjob_store.utils.user_defined_view.User_Defined>

</LinearLayout>