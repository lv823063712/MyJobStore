<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_item"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/order_ReceivingGoods_ddh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/order_ReceivingGoods_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/order_ReceivingGoods_ddh"
        android:text="123123213123"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/order_ReceivingGoods_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="12312313123"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/qianbao_shape"
        android:id="@+id/order_ReceivingGoods_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_ReceivingGoods_ddh"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/order_ReceivingGoods_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_ReceivingGoods_recycle"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派件公司"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/order_ReceivingGoods_pjgs"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆通快递"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_ReceivingGoods_lin"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递单号"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/order_ReceivingGoods_kddh"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123213213123"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <Button
        android:id="@+id/order_ReceivingGoods_ok"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        android:layout_alignTop="@id/order_ReceivingGoods_lin"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:background="#ff5757"
        android:text="确定收货"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
