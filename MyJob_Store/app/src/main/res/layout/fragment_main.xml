<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bitmap_bg"
    tools:context=".ui.fragment.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_144"
        android:background="@drawable/my_main_bg">

        <TextView
            android:id="@+id/Main_User_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:text="功夫大饭店" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/Main_User_Name"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_24"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/My_personal_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:id="@+id/PersonalData"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/my_icon_information_n_hdpi" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="center_vertical"
                        android:text="个人资料"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="#c4c4c4" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_my_circle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/my_icon_circle_n_hdpi" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="center_vertical"
                        android:text="我的圈子"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="#c4c4c4" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_My_footprint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/my_icon_foot_n_hdpi" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="center_vertical"
                        android:text="我的足迹"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="#c4c4c4" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/my_icon_wallet_n_hdpi" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="center_vertical"
                        android:text="我的钱包"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="#c4c4c4" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/my_icon_address_n_hdpi" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="center_vertical"
                        android:text="我的收货地址"
                        android:textColor="#666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="#c4c4c4" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/My_Head_Phone"
        app:roundAsCircle="true"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_104"
        android:src="@mipmap/head_portrait" />


</RelativeLayout>