<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/updata_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="修改密码"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#f00"
        />
    <TextView
        android:id="@+id/former_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updata_text"
        android:text="旧密码:"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/former_edix"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@id/former_password"
        app:layout_constraintBottom_toBottomOf="@id/former_password"
        app:layout_constraintTop_toTopOf="@id/former_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/my_ziliao_test"
        android:layout_marginLeft="@dimen/dp_10"
       android:paddingLeft="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/former_password"
        android:text="新密码:"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/new_edix"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@id/new_password"
        app:layout_constraintBottom_toBottomOf="@id/new_password"
        app:layout_constraintTop_toTopOf="@id/new_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/my_ziliao_test"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        />
    <Button
        android:id="@+id/updata_btn"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/new_edix"
        app:layout_constraintLeft_toLeftOf="@id/new_password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="修改"
        android:textColor="#222222"
        android:background="@drawable/alertdalog_button_shape"
        />
    <Button
        android:id="@+id/cancal_btn"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/new_edix"
        app:layout_constraintRight_toRightOf="@id/new_edix"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="取消"
        android:textColor="#222222"
        android:background="@drawable/alertdalog_button_shape"
        />
</android.support.constraint.ConstraintLayout>